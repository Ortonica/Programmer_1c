Процедура РСК_ЗаполнитьПоДоставленнымТСРПосле(Команда)
	Парам = Новый Структура;
	Парам.Вставить("Контрагент", Объект.Контрагент);
	Парам.Вставить("Дата", НачалоМесяца(?(Объект.Дата='00010101',ТекущаяДата(),Объект.Дата)));
	ОткрытьФорму("Документ.ПриобретениеУслугПрочихАктивов.Форма.РСК_ЗаполнениеПоДоставленнымТСР",Парам,ЭтаФорма);
